
<center><h1>Edit an existing todo</h1></center>



	<% if @todo.errors.any? %>
	<h2>THERE ARE ERRORS</h2>
	<ul>
		<% @todo.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
		<% end %>
	</ul>
	<% end %>



<%= form_for @todo do |f| %>
<p>
	<%= f.label :name %>
	<br>
	<%= f.text_field :name %>	 
</p>
<p>
	<%= f.label :description %>
	<br>
	<%= f.text_area :description %>	 
</p>



<%= f.submit %>

<% end %>